<Window x:Class="MONutritionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MONutritionApp"
        mc:Ignorable="d"
        Title="Food Details" Height="450" Width="800">
    <Grid  Background="#41729F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="659*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox
                  x:Name="CbFood"
                  FontSize="20"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center" Height="138" Width="732" Margin="30,62,30,10"
                  Background="#C3E0E5" Grid.ColumnSpan="2"/>
        <Button Grid.Row="1"
                x:Name="BtnFoodDetails"
                FontSize="30"
                Margin="30,30,30,30"
                Content="Show Food Details"
                Click="BtnFoodDetails_Click"
                Background="#C3E0E5" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
